@model CasgemDapper.Entity.Headings
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <form method="post">
        <label>Başlık Adı Giriniz</label>
        <input type="text" asp-for="HeadingName" class="form-control" />
        <br />
        <label>Başlık Durum</label>
        <input type="checkbox" asp-for="HeadingStatus" value="true" checked />      
        <br />
        <input type="hidden" asp-for="HeadingId" />
        <button class="btn btn-primary">Başlığı Ekle</button>
    </form>
</div>